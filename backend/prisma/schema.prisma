// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  email        String?   @unique
  name         String?
  password     String?
  refreshToken String?
  googleId     String?   @unique
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  bookings     Booking[]
  profile      Profile?
}

model Profile {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  user        User      @relation(fields: [userId], references: [id])
  userId      String    @unique @db.ObjectId
  name        String?
  phoneNumber String?
  gender      String?
  state       String?
  birthday    DateTime?
}

model Concert {
  id             String           @id @default(auto()) @map("_id") @db.ObjectId
  imageUrl       String?
  name           String
  venue          String
  date           DateTime
  gatesOpenTime  DateTime?
  about          String?
  language       String?
  organizedBy    String?
  totalSeats     Int
  availableSeats Int
  category       TicketCategory[]
  bookings       Booking[]
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
}

model TicketCategory {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  concert        Concert   @relation(fields: [concertId], references: [id])
  concertId      String    @db.ObjectId
  name           String
  price          Float
  totalSeats     Int
  availableSeats Int
  bookings       Booking[]
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Booking {
  id               String         @id @default(auto()) @map("_id") @db.ObjectId
  user             User           @relation(fields: [userId], references: [id])
  userId           String         @db.ObjectId
  concert          Concert        @relation(fields: [concertId], references: [id])
  concertId        String         @db.ObjectId
  ticketCategory   TicketCategory @relation(fields: [ticketCategoryId], references: [id])
  ticketCategoryId String         @db.ObjectId
  seats            Int
  bookedAt         DateTime
  expiresAt        DateTime?
  numberOfTickets  Int
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
}

model BookingQueue {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  userId    String    @db.ObjectId
  concertId String    @db.ObjectId
  position  Int
  timeSlot  DateTime?
  status    String
  enteredAt DateTime  @default(now())
}
